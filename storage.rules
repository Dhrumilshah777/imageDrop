rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /images/{allPaths=**} {
      // Anyone can read any image in the /images folder.
      // This is necessary for the public gallery to display images.
      allow read;

      // Only authenticated users can upload files.
      allow write: if request.auth != null;
    }
  }
}
